datasource db {
  provider = "sqlite"
  url      = "file:./dev.db"
}

generator client {
  provider = "prisma-client-js"
}

model Event {
  id          String   @id @default(cuid())
  object      String
  actorId     String
  actorName   String
  group       String
  actionId    String
  actionName  String
  targetId    String
  targetName  String
  location    String
  occurredAt  DateTime
  metadata    String
}
